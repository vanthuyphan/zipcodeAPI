extend ./layout.jade
block head

block content
	// Header
	header
		.container
			.intro-text
				.intro-lead-in Cafe2s
				.h3 Cầu nối giữa doanh nghiệp, nhân viên kinh doanh và đại lý
	section#about
		.container
			.row
				.col-lg-12.text-center
					h2.section-heading Hình Thức Hoạt Động
					h3.section-subheading.text-muted
	// Team Section
	section#contact
		.container
			.row
				.col-lg-12.text-center
					h2.section-heading Liên Hệ
					h3.section-subheading.text-muted
			.row
				.col-lg-12
					form#contactForm(action='sendMessage', method='POST')
						.row
							.col-md-6
								.form-group
									input#name.form-control(type='text', placeholder='Tên', name="name", required=true, data-validation-required-message='Please enter your name.')
									p.help-block.text-danger
								.form-group
									input#email.form-control(type='email', placeholder='Email', name="email",  required=true, data-validation-required-message='Please enter your email address.')
									p.help-block.text-danger
							.col-md-6
								.form-group
									textarea#message.form-control(placeholder='Message', name="message", required=true, data-validation-required-message='Please enter a message.')
									p.help-block.text-danger
							.clearfix
							.col-lg-12.text-center
								#success
								button.btn.btn-xl(type='submit') Gửi
