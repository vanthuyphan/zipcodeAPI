extend ./layout.jade
block head

block content
    .container#login-from
        .row.col-xs-1.col-md-3
        .row.col-xs-12.col-md-4
            h1  Forgot Password
            .msg=msg
            form(role='form' action="/forgot" method="POST")
                .form-group
                    label(for='email') Email:
                    input#email.form-control(type='email'  name="email")
                .form-group
                    button.btn.btn-primary() Recover Password

block page-script
    style.
        #login-from {
            margin-top: 150px;
        }

        button {
            margin-top: 5px;
        }

        .msg {
            margin: 5px;
            color: red;
        }