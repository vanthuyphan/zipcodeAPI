extend ./layout.jade
block head

block content
    .container#login-from
        .row.col-xs-1.col-md-3
        .row.col-xs-12.col-md-4
            h1  Change Password
            .msg=msg
            form(role='form' action="/change_password" method="POST")
                .form-group
                    input#email.form-control(type='email', name="email", value="#{email || ''}", readonly)
                .form-group
                    label(for='password') New Password:
                    input#password.form-control(type='password', name="password")
                .form-group
                    button.btn.btn-primary() Change Password

block page-script
    style.
        #login-from {
            margin-top: 150px;
        }

        button {
            margin-top: 5px;
        }

        .msg {
            margin: 5px;
            color: red;
        }