extend ./layout.jade
block head

block content
    .container#login-from
        .row.col-xs-1.col-md-3
        .row.col-xs-12.col-md-4
            .h1 Products
                table#table
                    tbody
                        each product, index in products
                            .item
                                div.action
                                    form(action='/delete_product/', method='post')
                                        input(type='hidden', value=product.code.toString(), name='code')
                                        input(type='submit', class='btn btn-success btn-xs', value='Delete')
                                    | &nbsp;
                                    span#name=product.content


block page-script
    style.
        #login-from {
            margin-top: 150px;
        }

        button {
            margin-top: 5px;
        }

        .msg {
            margin: 5px;
            color: red;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th {
            height: 50px;
        }

        #name {
            font-size:medium;
        }